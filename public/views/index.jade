doctype html
html(ng-app="dayJobs")
    head
        include partials/head.jade
    body
        section
            .container
                .row
                    .col-xs-12.col-sm-12
                         form(action="/login" method="POST")
                            .form-group
                                label
                                    input(type="text" ng-model="user.firstname" required)
                            .form-group
                                label
                                    input(type="text" ng-model="user.lastname" require)
                                button.btn.btn-success(ng-click="submit()") submit